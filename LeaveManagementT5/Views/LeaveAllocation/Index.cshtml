@model List<LeaveManagementT5.Models.LeaveAllocation>

<h2>Leave Allocations</h2>

<table class="table">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Leave Type</th>
            <th>Number of Days</th>
            <th>Year</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leaveAllocation in Model)
        {
            <tr>
                <td>@leaveAllocation.Employee.UserName</td>
                <td>@leaveAllocation.LeaveType?.Name</td>
                <td>@leaveAllocation.NumberOfDays</td>
                <td>@leaveAllocation.Year</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@leaveAllocation.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@leaveAllocation.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-right">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>