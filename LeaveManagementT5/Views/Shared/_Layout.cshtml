
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LeaveManagementT5</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LeaveManagementT5.styles.css" asp-append-version="true" />
</head>
<body>
   
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LeaveManagementT5</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employees" asp-action="Index">Employees</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ApplicationRoles" asp-action="Index">Roles</a> 
                        </li>



                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="LeaveTypes" asp-action="Index">LeaveTypes</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @if(User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="LeaveAllocation" asp-action="Index">Create LeaveAllocation</a>
                            </li>
                            
                        }
                        

                        @if (User.IsInRole("Employee"))
                        {
                            <a class="nav-link text-dark" asp-area="" asp-controller="LeaveAllocation" asp-action="EmployeeLeaveAllocations">My LeaveAllocations</a>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="LeaveRequest" asp-action="Index">View LeaveRequest</a>
                            </li>

                        }

                        @if (User.IsInRole("Employee"))
                        {
                            <a class="nav-link text-dark" asp-area="" asp-controller="LeaveRequest" asp-action="Create">Create LeaveRequest</a>
                        }

                        @if (User.IsInRole("Employee"))
                        {
                            <a class="nav-link text-dark" asp-area="" asp-controller="LeaveRequest" asp-action="MyLeaveRequests">My LeaveRequest</a>
                        }

                       
                    </ul>
                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
    


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @if (User.IsInRole("Employee"))
            {
                <h1>Hej ifrån Employee</h1>
            }
            @if(User.IsInRole("Admin"))
            {
                <h1>Hej Ifrån Admin</h1>
            }

          
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - LeaveManagementT5 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
